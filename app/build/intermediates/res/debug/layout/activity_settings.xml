<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ridgway.smsautoresponder.SettingsActivity" >

	<LinearLayout
	    android:id="@+id/container"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context="com.ridgway.smsautoresponder.MainActivity"
	    tools:ignore="MergeRootFrame" >
	    
	    <TextView
	        android:id="@+id/textViewDriveTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:text="@string/driving_title" />
	
	    <EditText
	        android:id="@+id/editDrivingText"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:hint="@string/response_hint"
	        android:inputType="textMultiLine" />

	    <TextView
	        android:id="@+id/textViewHikingTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="9dp"
	        android:text="@string/hiking_title" />
	
	    <EditText
	        android:id="@+id/editHikingText"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:hint="@string/response_hint"
	        android:inputType="textMultiLine" />
	
	    <TextView
	        android:id="@+id/textViewRunningTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="12dp"
	        android:text="@string/running_title" />
	
	    <EditText
	        android:id="@+id/editRunningText"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:hint="@string/response_hint"
	        android:inputType="textMultiLine" >
	    </EditText>
	
	    <TextView
	        android:id="@+id/textViewBikingTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="12dp"
	        android:text="@string/biking_title" />
	
	    <EditText
	        android:id="@+id/editBikingText"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:hint="@string/response_hint"
	        android:inputType="textMultiLine" />
	
	    <TextView
	        android:id="@+id/textViewDisturbTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="12dp"
	        android:text="@string/donot_disturb_title" />
	
	    <EditText
	        android:id="@+id/editDisturbText"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:hint="@string/response_hint"
	        android:inputType="textMultiLine" />
	
	    <Button
	        android:id="@+id/button1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:gravity="center_vertical|center_horizontal"
	        android:onClick="resetDefaults"
	        android:text="@string/reset_defaults" />

    </LinearLayout>
</ScrollView>
